<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserDao">
    <select id="getUserMessageByAccount" resultType="com.domain.User">
       select * from account where user_account = #{user_account}
    </select>

    <select id="getUserList" resultType="com.domain.User">
       select * from account
    </select>

    <insert id="addUser" parameterType="com.domain.User">
        insert into account(user_id,user_account,password,user_name,user_avatar,birthday,email,create_date,telephone,update_date,status,last_login_time)
          values (#{user_id},#{user_account},#{password},#{user_name},#{user_avatar},#{birthday},#{email},#{create_date},#{telephone},#{update_date},#{status},#{last_login_time});
    </insert>

    <update id="updateUserByAccount" parameterType="com.domain.User">
          update account set
          user_id=#{user_id},password=#{password},user_name=#{user_name},user_avatar=#{user_avatar},birthday=#{birthday},email=#{email},create_date=#{create_date},telephone=#{telephone},update_date=#{update_date},status=#{status},last_login_time=#{last_login_time}
          where user_account = #{user_account};
    </update>

    <delete id="deleteUserByAccount" >
        delete from account where user_account = #{user_account};
    </delete>
</mapper>