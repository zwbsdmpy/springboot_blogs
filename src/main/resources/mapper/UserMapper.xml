<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.UserDao">
    <select id="getUserMessageByAccount" resultType="com.domain.User">
       select * from account where user_account = #{user_account}
    </select>

    <select id="getUserList" resultType="com.domain.User">
       select * from account
    </select>

    <insert id="addUser" parameterType="com.domain.User">
        insert into user (username,address) values (#{username},#{address});
    </insert>

    <update id="updateUserByAccount" parameterType="org.sang.mybatis.model.User">
        update user set username=#{username},address=#{address} where id=#{id}
    </update>
    <delete id="deleteUserByAccount">
        delete from user where id=#{id}
    </delete>
</mapper>